#include <stdio.h>
#include <stdlib.h>
int main()
{
    float pi = 3.14;
    float h,r1,r2,l,V,S;
    printf("Input h: "); scanf("%f",&h);
    printf("Input r: "); scanf("%f",&r1);
    printf("Input R: "); scanf("%f",&r2);
    l = sqrt(pow(r1 - r2, 2) + h * h);
    V = (pi*h*(r2*r2+r2*r1+r1*r1))/3;
    S = pi*(r2*r2+(r2+r1)*l+r1*r1);
    printf("V= %.2f\nS= %.2f",V,S);
    return 0;
}
